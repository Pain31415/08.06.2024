<Window x:Class="_08._06._2024.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_08._06._2024"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBox Name="NumberTextBox" Width="200" Margin="10" Text="Enter a number"/>
            <TextBox Name="ExponentTextBox" Width="200" Margin="10" Text="Enter an exponent"/>
            <Button Name="CalculateButton" Content="Calculate Power" Width="200" Margin="10" Click="CalculateButton_Click"/>
            <TextBlock Name="ResultTextBlock" Width="200" Margin="10" TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
