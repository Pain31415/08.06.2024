<Window x:Class="_08._06._2024.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_08._06._2024"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
            <TextBlock Text="Limit:" VerticalAlignment="Center" Margin="5"/>
            <TextBox x:Name="LimitTextBox" Width="100" Margin="5"/>
            <Button Content="Calculate" Click="CalculateButton_Click" Margin="5"/>
        </StackPanel>
        <ListBox Grid.Row="1" ItemsSource="{Binding FibonacciNumbers}" Margin="5"/>
    </Grid>
</Window>
